# ======================
# SERVER CONFIGURATION
# ======================
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1

# ======================
# DATABASE
# ======================
MONGODB_URI=mongodb://localhost:27017/bsk-mt
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password

# ======================
# REDIS
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ======================
# JWT CONFIGURATION
# ======================
# Generate strong secrets: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_minimum_256_bits_long
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_different_from_above
JWT_REFRESH_EXPIRATION=7d

# ======================
# COOKIE CONFIGURATION
# ======================
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_HTTP_ONLY=true

# ======================
# SECURITY
# ======================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=7200
PASSWORD_MIN_LENGTH=8

# ======================
# CORS
# ======================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3
RATE_LIMIT_PASSWORD_RESET=3

# ======================
# EMAIL CONFIGURATION
# ======================
EMAIL_VERIFICATION_EXPIRATION=24h
EMAIL_VERIFICATION_RESEND_LIMIT=3
PASSWORD_RESET_EXPIRATION=1h

# Email service (e.g., SendGrid, AWS SES, SMTP)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Your App Name

# ======================
# 2FA CONFIGURATION
# ======================
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER=BSK-MT
TWO_FACTOR_APP_NAME=BSK Motociclismo

# ======================
# FRONTEND URL
# ======================
FRONTEND_URL=http://localhost:3000

# ======================
# PAYMENT GATEWAY (Bold)
# ======================
BOLD_API_KEY=your_bold_api_key
BOLD_API_SECRET=your_bold_api_secret
BOLD_PUBLIC_KEY=your_bold_public_key
BOLD_WEBHOOK_SECRET=your_bold_webhook_secret
BOLD_ENVIRONMENT=test

# ======================
# RECAPTCHA
# ======================
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# ======================
# CSRF PROTECTION
# ======================
CSRF_SECRET=your_csrf_secret_here_minimum_256_bits

# ======================
# FILE UPLOADS
# ======================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads
AWS_S3_BUCKET=your-s3-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ======================
# LOGGING
# ======================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ======================
# GOOGLE OAUTH (optional)
# ======================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback

# ======================
# SESSION MANAGEMENT
# ======================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000
SESSION_CLEANUP_INTERVAL=3600000

# ======================
# API KEYS (for external services)
# ======================
MESSAGEBIRD_API_KEY=your_messagebird_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
